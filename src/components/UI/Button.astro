---
import defu from 'defu';

interface Props {
  theme?: 'primary' | 'secondary'
}

const { theme } = defu(Astro.props, { theme: 'primary' });
---

<button
  class="button"
  class:list={[theme]}
>
  <slot />
</button>

<style lang="scss">
  .button {
    padding: 12px 36px;
    border: 1px solid var(--color-neutral-5);
    border-radius: 6px;
    @include base-transition;

    &:hover {
      cursor: pointer;
    }

    &.primary {
      background: var(--color-red-normal);
      border-color: var(--color-red-dark);
      color: var(--color-neutral-2);

      &:hover {
        background: var(--color-red-normal-hover);
      }

      &:active {
        background: var(--color-red-normal-active);
      }
    }

    &.secondary {
      background: var(--color-neutral-4);

      &:hover {
        border-color: var(--color-neutral-5);
      }

      &:active {
        background: var(--color-neutral-5);
        border-color: var(--color-neutral-5);
      }
    }
  }

  @include theme-dark {
    .button {
      &.primary {
        background: var(--color-green-normal);
        border-color: var(--color-green-dark);
        color: var(--color-neutral-2);

        &:hover {
          background: var(--color-green-normal-hover);
        }

        &:active {
          background: var(--color-green-normal-active);
        }
      }
    }
  }
</style>
