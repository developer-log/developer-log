{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "importsNotUsedAsValues": "error",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@ui": ["./src/components/UI/index.ts"],
      "@component/*": ["./src/components/*"],
      "@utility/*": ["./src/utils/*"]
    }
  },
  "include": [
    "src",
    "astro-shim.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
